@{
    ViewData["Title"] = "Главная";

    // Временный массив новостей
    var newsList = new List<dynamic>
    {
        new {
            Title = "Фитнес-марафон в Нижнем Новгороде",
            Description = "Коллеги из Нижнего Новгорода проводят уже третий сезон фитнес-марафона...",
            ImageUrl = "/img/test/sber-otkryl-registraciju-na-zeljonyj-marafon-2024-v-gorodah-rossii-d66e9ee.jpg",
            Likes = 19,
            Date = "03.10.2024"
        },
        new {
            Title = "Спартакиада Росатома",
            Description = "В Московской области прошла спартакиада «XIII Всероссийский Кубок Атомной Промышленности»...",
            ImageUrl = "/img/test/6E535134_7464_4BEE_A7AF_FE98C8F438A8.png",
            Likes = 11,
            Date = "02.10.2024"
        },
        new {
            Title = "Тренинги и вебинары в первой половине октября",
            Description = "Эксперты Лиги расскажут о стратегиях ведения переговоров и управлении конфликтами...",
            ImageUrl = "/img/test/poster_event_1433755.jpg",
            Likes = 5,
            Date = "01.10.2024"
        },
        new {
            Title = "Победители акции «Скажи спасибо»",
            Description = "Подводим итоги летнего сезона акции. О важности получения слов благодарности...",
            ImageUrl = "/img/test/64559-thanks5.png",
            Likes = 9,
            Date = "30.09.2024"
        }
    };

    // Временный массив элементов карусели
    var carouselItems = new List<dynamic>
    {
        new {
            Title = "Friends",
            ImageUrl = "/img/friend-1280.jpg"
        },
        new {
            Title = "EduTools",
            ImageUrl = "/img/1280-tools.png"
        },
        new {
            Title = "SayThanks",
            ImageUrl = "/img/1280-say-thank.png"
        }
    };
}

<!-- Карусель -->
<div class="swiper-container">
    <div class="swiper-wrapper">
        @foreach (var item in carouselItems)
        {
            <div class="swiper-slide">
                <div class="carousel-content">
                    <img src="@item.ImageUrl" alt="@item.Title" class="carousel-image" />
                </div>
            </div>
        }
    </div>
    <!-- Кнопки навигации -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>

    <!-- Пагинация (точки) -->
    <div class="swiper-pagination"></div>
</div>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var news in newsList)
        {
            <div class="col-md-6 col-lg-6">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@news.ImageUrl" alt="News Image">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text">@news.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">@news.Date</small>
                            <small class="text-muted">❤️ @news.Likes</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .container {
        margin-top: 400px;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .swiper-container {
        left: 0;
        top: 50px;
        position: absolute;
        width: 100vw;
        height: 300px;
        margin-top: 20px;
    }

    .swiper-slide {
        max-width: 100vw;
        overflow-x: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #eef1f5;
        position: relative;
    }

    div.swiper-wrapper * {
        width: 100%;
        height: 100%;
    }

    .swiper-button-prev,
    .swiper-button-next {
        display: none !important;
    }

    .carousel-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .carousel-image {
        width: 200px;
        height: auto;
        margin-right: 20px;
    }

    .carousel-text {
        text-align: left;
    }

        .carousel-text h2 {
            font-size: 24px;
            margin: 0;
            color: #333;
        }

        .carousel-text p {
            font-size: 16px;
            color: #666;
        }
</style>
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper('.swiper-container', {
        loop: true,
        autoplay: {
            delay: 3000,
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        simulateTouch: true,
        grabCursor: true,
    });
</script>