@{
    ViewData["Title"] = "Таймшит";
    ViewData["PageTitle"] = "Таймшит";
}
<h1>@ViewData["Title"]</h1>

<div class="week-selector-container">
    <div class="week-selector">
        <button class="btn btn-light">&#60;</button>
        <div class="week-container">
            <div class="week-item">9 – 15 Сент.</div>
            <div class="week-item">16 – 22 Сент.</div>
            <div class="week-item">23 – 29 Сент.</div>
            <div class="week-item">30 – 6 Окт.</div>
            <div class="week-item active">1 – 6 Окт.</div>
            <div class="week-item">7 – 13 Окт.</div>
        </div>
        <button class="btn btn-light">&#62;</button>
    </div>

    <div class="table-container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Проект</th>
                    <th>ПН 30.09</th>
                    <th>ВТ 01.10</th>
                    <th>СР 02.10</th>
                    <th>ЧТ 03.10</th>
                    <th>ПТ 04.10</th>
                    <th>СБ 05.10</th>
                    <th>ВС 06.10</th>
                    <th>Итого</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" class="input-project" placeholder="Введите название проекта..."></td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>0ч</td>
                    <td>
                        <button class="btn btn-outline-secondary">Сохранить</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="btn-transfer">
        <button>Перенести с прошлой недели</button>
        <button>Перенести с выбранной недели</button>
    </div>

    <div class="btn-submit">
        <button>Отправить все проекты на согласование</button>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .header {
        background-color: #007bff;
        color: white;
        padding: 20px;
        text-align: left;
        font-size: 24px;
    }

    .week-selector {
        display: flex;
        justify-content: space-between;
        background-color: #f9f9f9;
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    .week-item {
        padding: 10px 20px;
        border: 1px solid #ddd;
        cursor: pointer;
        margin-right: 10px;
        color: #007bff;
    }

        .week-item.active {
            background-color: #007bff;
            color: white;
        }

    .table-container {
        margin: 20px 0;
        background-color: white;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .input-project {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
    }

    .btn-transfer {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .btn-transfer button {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            padding: 10px 20px;
            margin: 0 10px;
            color: #007bff;
        }

    .btn-submit {
        text-align: center;
    }

        .btn-submit button {
            background-color: #ccc;
            border: none;
            padding: 10px 20px;
            color: white;
            cursor: not-allowed;
        }
</style>